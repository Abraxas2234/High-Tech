{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="logo-link">
        <a class="link-logo" href="{{ path('catalog') }}"><img class="logo" src="{{ asset('assets/img/logo.png') }}"></a>
    </div>
    <div class="row spacer">
        <div class="col-lg-12">
            <div id="box-form">
                <div id="box-title">Créer un compte</div>
                <form action="{{ path('fos_user_registration_register') }}" method="POST">
                    <div class="form-group" id="fos_user_registration_form">
                        <label id="box-label">Votre nom</label>
                        <input style="margin-bottom: 0.5rem; font-size: 15px;" {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.email) }}

                        <label id="box-label">E-mail</label>
                        <input style="margin-bottom: 0.5rem; font-size: 15px;" {{ form_widget(form.email, { 'attr': {'class': 'form-control' } }) }}
                        {{ form_errors(form.username) }}

                        <label id="box-label">Mot de passe</label>
                        <input style="margin-bottom: 0.5rem; font-size: 15px;" {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Au moins 6 caractères'|trans } }) }}
                        {{ form_errors(form.plainPassword.first) }}
                        <div id="box-alert"><i class="fas fa-exclamation"></i> Les mots de passe doivent au moins avoir 6 caractères.</div>

                        <label id="box-label">Entrez le mot de passe à nouveau</label>
                        <input style="margin-bottom: 0.5rem; font-size: 15px;" {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control' } }) }}
                        {{ form_errors(form.plainPassword.second) }}

                        {{ form_rest(form) }}
                        
                        <button style="font-size: 15px;" class="btn btn-primary col-lg-12" type="submit" value="{{ 'registration.submit'|trans }}">Créer votre compte High-Tech.fr</button>
                        <div id="box-legal">
                            <span class="filer-phrase">En créant un compte, vous acceptez les </span>
                            <a class="link-red" href="#">Conditions générales de vente</a>
                            <span class="filer-phrase"> d’High-Tech. Veuillez consulter notre </span>
                            <a class="link-red" href="#">Notice Protection de vos Informations Personnelles</a>
                            <span class="filer-phrase">, notre </span>
                            <a class="link-red" href="#">Notice Cookies</a>
                            <span class="filer-phrase"> et notre </span>
                            <a class="link-red" href="#">Notice Annonces publicitaires basées sur vos centres d’intérêt</a>.
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-12 already-reg">
            <div class="nouveau">
                <span class="nouveau-catch">— Vous possédez déjà un compte ? —</span>
            </div>
            <div class="question col-lg-12">
                <a class="btn btn-primary" href="{{ path('fos_user_security_login') }}">Connectez-vous</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}