{% extends 'layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
{{ parent() }}
	<link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="row spacer">
        <div class="col-lg-6">
            <div id="box-form">
                <div id="box-title">Créer un compte</div>
                <form action="{{ path('fos_user_registration_register') }}" method="POST">
                    <div class="form-group" id="fos_user_registration_form">
                        <label id="box-label">Votre nom</label>
                        <input style="margin-bottom: 0.5rem; font-size: 15px;" {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
                        {{ form_errors(form.email) }}

                        <label id="box-label">E-mail</label>
                        <input style="margin-bottom: 0.5rem; font-size: 15px;" {{ form_widget(form.email, { 'attr': {'class': 'form-control' } }) }}
                        {{ form_errors(form.username) }}

                        <label id="box-label">Mot de passe</label>
                        <input style="margin-bottom: 0.5rem; font-size: 15px;" {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Au moins 6 caractères'|trans } }) }}
                        {{ form_errors(form.plainPassword.first) }}
                        <div id="box-alert"><i class="fas fa-exclamation"></i> Les mots de passe doivent au moins avoir 6 caractères.</div>

                        <label id="box-label">Entrez le mot de passe à nouveau</label>
                        <input style="margin-bottom: 0.5rem; font-size: 15px;" {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control' } }) }}
                        {{ form_errors(form.plainPassword.second) }}

                        {{ form_rest(form) }}
                        
                        <button style="font-size: 15px;" class="btn btn-outline-primary" type="submit" value="{{ 'registration.submit'|trans }}">Créer votre compte High-Tech</button>
                        <div id="box-legal">
                            En créant un compte, vous acceptez les <a href="#">Conditions générales de vente</a> d’High-Tech. Veuillez consulter notre <a href="#">Notice Protection de vos Informations Personnelles</a>, notre <a href="#">Notice Cookies</a> et notre <a href="#">Notice Annonces publicitaires basées sur vos centres d’intérêt</a>.
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-6 already-reg">
            <a href="#" class="reg">Déjà inscrit ?</a>
        </div>
    </div>
</div>
{% endblock %}