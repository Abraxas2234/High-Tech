{% extends 'layout.html.twig' %}

{% block stylesheets %}
{{ parent() }}
  <link rel="stylesheet" href="{{ asset('assets/css/items.css') }}">
{% endblock %}

{% block body %}
<div class="perso">
    <div id="mySidenav" class="sidenav">
        <a href="#">About</a>
        <a href="#">Services</a>
        <a href="#">Clients</a>
        <a href="#">Contact</a>
        <div class="dropdown-divider"></div>
    </div>
    <div class="container">
        {% for product in products %}
            <div class="row">
                <div class="productbox">
                    <div class="product-img col-lg-2">
                        <img class="img-product" src="{{asset('assets/img/'~product.getProductBrand)}}"/>
                    </div>
                    <div class="product-name col-lg-10">
                        <div class="name">
                            <a href="#">
                                <a href="{{ path('product', {'id': product.id}) }}">{{ product.name }}</a>
                            </a>
                            <div><i class="fas fa-star star-full"></i><i class="fas fa-star star-full"></i><i class="fas fa-star star-full"></i><i class="fas fa-star star-full"></i><i class="far fa-star star-empty"></i></div>
                            <span>4/5 (1 avis)
                        </div>
                        <div class="product-price">
                            <span class="reduction">Prix r√©duit </span><span class="fullprice">{{ product.productPrice }} EUR</span><br>
                            <div class="infos">
                                <span class="livraison">Livraison gratuite possible (voir fiche produit).</span>
                                <span class="stock">Stock : {{ product.productStock }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="spacer"></div>
        {% endfor %}
    </div>
</div>
{% endblock %}