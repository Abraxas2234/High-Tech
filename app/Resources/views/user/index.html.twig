{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('assets/css/user.css') }}" />
{% endblock %}

{% block body %}
    <div class="container">
        <div class="profile-box">
            <h3>
                <b>Profil</b>
            </h3>

            <p>Nom d'utilisateur : {{ user.username }}</p>
            <p>Adresse e-mail : {{ user.email }}</p>
            
            {% for client in detailsClient if client.id == user.id %}
                <p>Nom : {{ client.lastName }}</p>
                <p>Prénom : {{ client.firstName }}</p>
                <p>Numéro de télephone : {{ client.phone }}</p>

                <a href="{{ path('client_edit', { 'id': client.id }) }}">
                    <button class="btn btn-primary">
                        <i class="fas fa-edit"></i>
                    </button>
                </a>
            {% endfor %}
      </div>

      <div class="row">
          <div class="col-lg-5 cuck-box">
              <h4>
                  <b>Livraison</b>
              </h4>

              {% for delivery in listDeliveries if delivery.user == user.id %}
                  <p>
                      {{ delivery.address }}
                      {{ delivery.zipCode }}
                      {{ delivery.city }}
                      {{ delivery.country }}

                      <a href="{{ path('delivery_edit', { 'id': delivery.id }) }}">
                          <button class="btn btn-primary">
                              <i class="fas fa-edit"></i>
                          </button>
                      </a>
                  </p>
              {% endfor %}

              <a href="{{ path('delivery_new') }}">
                  <button class="btn btn-primary">
                      <i class="fas fa-plus-circle"></i>
                  </button>
              </a>
          </div>

          <div class="col-lg-5 cuck-box">
              <h4>
                  <b>Facturation</b>
              </h4>

              {% for billing in listBillings if billing.user == user.id %}
                  <p>
                      {{ billing.address }}
                      {{ billing.zipCode }}
                      {{ billing.city }}
                      {{ billing.country }}
                  </p>

                  <a href="{{ path('billing_edit', { 'id': billing.id }) }}">
                      <button class="btn btn-primary">
                          <i class="fas fa-edit"></i>
                      </button>
                  </a>
              {% endfor %}

              <a href="{{ path('billing_new') }}">
                  <button class="btn btn-primary">
                      <i class="fas fa-plus-circle"></i>
                  </button>
              </a>
          </div>

          <div class="profile-box">
              <h3>Loi RGPD, suppression de vos données et de votre compte :
              </h3>

              {% for client in detailsClient if client.id == user.id %}
                  <a href="{{ path('nuke_user', { 'id': client.id }) }}">
                      <button class="btn btn-primary">
                        Désactivation du compte
                      </button>
                  </a>
              {% endfor %}

              <p>ATTENTION : Toutes vos informations personelles seront supprimées de notre base de données conformément à la loi RGPD.</p>
          </div>
      </div>
    </div>
{% endblock %}